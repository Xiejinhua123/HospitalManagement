<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cn.vote.entity.GoodsBall" table="goods_ball" catalog="vote">
        <id name="id" type="java.lang.Integer">
            <column name="ID" />
            <generator class="identity"></generator>
        </id>
        <property name="goodsIds" type="java.lang.String">
            <column name="GOODS_IDS" length="65535" not-null="true" />
        </property>
        <property name="product" type="java.lang.String">
            <column name="PRODUCT" length="65535" not-null="true" />
        </property>
        <property name="delete" type="java.lang.String">
            <column name="DELETE_STATUS" not-null="true"/>
        </property>
        <many-to-one name="adminByUpdate" class="cn.vote.entity.Admin">
        	<column name="UPDATE_ID" not-null="true"></column>
        </many-to-one>
        <property name="updateTime" type="java.util.Date">
            <column name="UPDATE_TIME" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>
